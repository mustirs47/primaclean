  <style>
    /* =========================
       THEME TOKENS (DARK DEFAULT)
       Auto light via prefers-color-scheme
       ========================= */
    :root{
      --bg: #0f1011;
      --surface: rgba(255,255,255,.06);
      --surface2: rgba(0,0,0,.14);
      --card: rgba(255,255,255,.05);
      --text: #f6f6f4;
      --muted: rgba(246,246,244,.82);
      --muted2: rgba(246,246,244,.62);
      --line: rgba(255,255,255,.10);
      --shadow: 0 18px 60px rgba(0,0,0,.22);

      --accent: #a9b6a2;      /* sage */
      --accent2: #d7d0c3;     /* sand */

      --radius: 22px;
      --radius2: 34px;
      --max: 1120px;

      --h1: clamp(40px, 4.6vw, 62px);
      --h2: clamp(26px, 2.6vw, 34px);
      --h3: 19px;

      --p: 17px;
      --p2: 15.5px;
    }

    /* LIGHT THEME */
    @media (prefers-color-scheme: light){
      :root{
        --bg: #f7f7f5;
        --surface: rgba(0,0,0,.04);
        --surface2: rgba(255,255,255,.82);
        --card: rgba(255,255,255,.86);
        --text: #1d1e1f;
        --muted: rgba(29,30,31,.76);
        --muted2: rgba(29,30,31,.56);
        --line: rgba(0,0,0,.10);
        --shadow: 0 18px 50px rgba(0,0,0,.08);

        --accent: #6f7f6b;
        --accent2: #cfc7b8;
      }
    }

    *{box-sizing:border-box}
    html{scroll-behavior:smooth}
    body{
      margin:0;
      color:var(--text);
      background:
        radial-gradient(900px 520px at 18% 6%, color-mix(in srgb, var(--accent) 20%, transparent), transparent 62%),
        radial-gradient(700px 440px at 84% 12%, color-mix(in srgb, var(--accent2) 18%, transparent), transparent 60%),
        var(--bg);
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
      line-height: 1.72;
      letter-spacing: .2px;
      font-size: var(--p);
    }
    a{color:inherit; text-decoration:none}
    .wrap{max-width:var(--max); margin:0 auto; padding:0 22px}
    .skip{
      position:absolute; left:-9999px; top:12px;
      background:var(--card); border:1px solid var(--line); padding:10px 12px; border-radius:14px;
    }
    .skip:focus{left:12px; z-index:9999}

    /* =========================
       HEADER
       ========================= */
    header{
      position:sticky; top:0; z-index:50;
      backdrop-filter: blur(12px);
      background: color-mix(in srgb, var(--bg) 84%, transparent);
      border-bottom:1px solid var(--line);
    }
    .nav{
      display:flex; align-items:center; justify-content:space-between;
      padding:16px 0;
      gap:12px;
    }
    .brand{
      display:flex; align-items:center; gap:12px;
      min-width: 230px;
    }
    .mark{
      width:42px; height:42px; border-radius:16px;
      background: linear-gradient(145deg,
        color-mix(in srgb, var(--accent) 26%, transparent),
        color-mix(in srgb, var(--text) 8%, transparent)
      );
      border:1px solid var(--line);
      box-shadow: 0 10px 30px rgba(0,0,0,.12);
      display:grid; place-items:center;
    }
    .mark svg{width:22px; height:22px}
    .brand .name{display:flex; flex-direction:column; gap:2px; line-height:1.1}
    .brand b{font-size:15px; letter-spacing:.35px}
    .brand span{font-size:12.5px; color:var(--muted2)}

    nav ul{list-style:none; display:flex; gap:18px; padding:0; margin:0; align-items:center}
    nav a{
      font-size:14px; color:var(--muted);
      padding:10px 10px; border-radius:14px;
      transition: background .18s ease, color .18s ease, border-color .18s ease;
      border: 1px solid transparent;
    }
    nav a:hover{background: var(--surface); color:var(--text); border-color:var(--line)}

    .nav-actions{display:flex; gap:10px; align-items:center; justify-content:flex-end; min-width: 260px;}
    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      gap:10px;
      padding:12px 16px;
      border-radius: 16px;
      border:1px solid var(--line);
      background: var(--surface);
      color: var(--text);
      font-weight: 600;
      font-size: 14px;
      letter-spacing:.2px;
      cursor:pointer;
      transition: transform .14s ease, background .18s ease, border-color .18s ease;
      user-select:none;
    }
    .btn:hover{background: color-mix(in srgb, var(--surface) 65%, transparent); transform: translateY(-1px)}
    .btn.primary{
      background: linear-gradient(145deg,
        color-mix(in srgb, var(--accent) 28%, transparent),
        color-mix(in srgb, var(--text) 10%, transparent)
      );
      border-color: color-mix(in srgb, var(--accent) 45%, var(--line));
    }
    .btn.primary:hover{border-color: color-mix(in srgb, var(--accent) 70%, var(--line))}
    .btn.ghost{background: transparent}
    .icon{width:16px;height:16px; opacity:.9}
    .menu-btn{display:none}

    /* =========================
       "PAGES" (hash router)
       ========================= */
    .page{display:none}
    .page.active{display:block}

    /* =========================
       HERO
       ========================= */
    .hero{padding: 56px 0 30px}
    .hero-grid{
      display:grid;
      grid-template-columns: 1.05fr .95fr;
      gap: 18px;
      align-items: stretch;
    }
    .card{
      background: var(--card);
      border: 1px solid var(--line);
      border-radius: var(--radius2);
      box-shadow: var(--shadow);
    }

    .hero-left{padding: 42px}
    .kicker{
      display:inline-flex; gap:10px; align-items:center;
      padding: 9px 14px;
      border-radius: 999px;
      border:1px solid color-mix(in srgb, var(--accent) 40%, var(--line));
      background: color-mix(in srgb, var(--accent) 12%, transparent);
      color: var(--muted);
      font-size: 13.5px;
    }
    h1{
      margin: 18px 0 12px;
      font-size: var(--h1);
      line-height: 1.12;
      letter-spacing: -0.7px;
    }
    .sub{
      margin: 0 0 18px;
      color: var(--muted);
      max-width: 60ch;
      font-size: 18px;
    }
    .hero-ctas{display:flex; gap:12px; flex-wrap:wrap; margin-top: 16px}
    .micro{
      margin-top: 18px;
      color: var(--muted2);
      font-size: 14px;
      display:flex; gap:12px; flex-wrap:wrap;
      align-items:center;
    }
    .micro .dot{width:4px; height:4px; border-radius:99px; background: color-mix(in srgb, var(--text) 18%, transparent)}
    .soft-line{margin-top:22px; border-top:1px solid var(--line); padding-top:18px}
    .soft-promise{
      display:flex; gap:10px; align-items:flex-start;
      color: var(--muted);
      font-size: var(--p2);
      max-width: 66ch;
    }
    .soft-promise b{color:var(--text)}
    .spark{
      width: 18px; height: 18px; border-radius: 7px;
      border: 1px solid color-mix(in srgb, var(--accent) 35%, var(--line));
      background: color-mix(in srgb, var(--accent) 12%, transparent);
      display:grid; place-items:center; margin-top:4px;
    }

    /* RIGHT: LEAD */
    .hero-right{padding: 18px; display:flex; flex-direction:column; gap:12px}
    .lead-top{
      padding: 22px;
      border-radius: 26px;
      background: var(--surface2);
      border:1px solid var(--line);
    }
    .lead-top h2{margin:0 0 6px; font-size: 19px}
    .lead-top p{margin:0; color: var(--muted); font-size: 15.5px}
    .tabs{display:flex; gap:10px; margin-top: 14px; flex-wrap:wrap}
    .tab{
      flex:1; min-width: 130px;
      text-align:center;
      padding: 11px 12px;
      border-radius: 16px;
      border:1px solid var(--line);
      background: var(--surface);
      color: var(--muted);
      font-weight: 700;
      font-size: 13.5px;
      cursor:pointer;
      transition: background .18s ease, border-color .18s ease, color .18s ease;
      user-select:none;
    }
    .tab[aria-selected="true"]{
      background: color-mix(in srgb, var(--accent) 16%, transparent);
      border-color: color-mix(in srgb, var(--accent) 42%, var(--line));
      color: var(--text);
    }

    form{
      padding: 22px;
      border-radius: 26px;
      background: var(--surface2);
      border:1px solid var(--line);
    }
    .grid{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 14px;
    }
    .field{display:flex; flex-direction:column; gap:8px}
    label{font-size: 13.5px; color: var(--muted2)}
    input, select, textarea{
      width:100%;
      padding: 13px 13px;
      border-radius: 16px;
      border:1px solid var(--line);
      background: color-mix(in srgb, var(--surface) 80%, transparent);
      color: var(--text);
      outline:none;
      font-size: 15px;
      transition: border-color .18s ease, background .18s ease;
    }
    input::placeholder, textarea::placeholder{color: color-mix(in srgb, var(--muted2) 85%, transparent)}
    input:focus, select:focus, textarea:focus{
      border-color: color-mix(in srgb, var(--accent) 60%, var(--line));
      background: color-mix(in srgb, var(--surface) 95%, transparent);
    }
    textarea{min-height: 96px; resize: vertical}
    .full{grid-column: 1 / -1}

    .form-actions{
      display:flex; gap:12px; align-items:center; justify-content:space-between;
      margin-top: 14px;
      flex-wrap:wrap;
    }
    .fine{color: var(--muted2); font-size: 13px; max-width: 52ch}
    .fine a{color: color-mix(in srgb, var(--accent) 95%, var(--text)); text-decoration:underline; text-underline-offset:3px}
    .inline-actions{display:flex; gap:10px; flex-wrap:wrap}

    /* =========================
       SECTIONS
       ========================= */
    section{padding: 58px 0}
    .section-head{
      display:flex; align-items:flex-end; justify-content:space-between; gap: 16px; flex-wrap:wrap;
      margin-bottom: 18px;
    }
    .section-head h2{margin:0; font-size: var(--h2); letter-spacing:-0.2px}
    .section-head p{margin:0; color: var(--muted); max-width: 72ch; font-size: 16.5px}

    .cards{
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 18px;
    }
    .mini{
      padding: 28px;
      border-radius: var(--radius);
      background: var(--card);
      border:1px solid var(--line);
      box-shadow: 0 10px 40px rgba(0,0,0,.06);
    }
    .mini h3{margin:0 0 8px; font-size: var(--h3)}
    .mini p{margin:0; color: var(--muted); font-size: 16px}
    .tag{
      display:inline-flex; margin-top: 14px;
      color: color-mix(in srgb, var(--accent) 92%, var(--text));
      font-weight: 700;
      font-size: 13.5px;
    }

    .steps{
      display:grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 18px;
      margin-top: 16px;
    }
    .step{
      padding: 28px;
      border-radius: var(--radius);
      background: var(--card);
      border:1px solid var(--line);
    }
    .num{
      width: 38px; height: 38px;
      border-radius: 16px;
      display:grid; place-items:center;
      background: color-mix(in srgb, var(--accent) 16%, transparent);
      border:1px solid color-mix(in srgb, var(--accent) 35%, var(--line));
      font-weight: 900;
      margin-bottom: 12px;
    }
    .step h3{margin:0 0 8px; font-size: var(--h3)}
    .step p{margin:0; color: var(--muted); font-size: 16px}

    /* PROOF */
    .proof{
      display:grid;
      grid-template-columns: 1.2fr .8fr;
      gap: 18px;
      align-items: stretch;
    }
    .quote{
      padding: 30px;
      border-radius: var(--radius2);
      border:1px solid var(--line);
      background: var(--card);
    }
    .quote p{margin:0; font-size: 19px; line-height:1.55}
    .quote small{display:block; margin-top: 14px; color: var(--muted2); font-size: 14px}

    .list{
      padding: 30px;
      border-radius: var(--radius2);
      border:1px solid var(--line);
      background: var(--surface2);
      display:flex; flex-direction:column; gap: 14px;
    }
    .item{display:flex; gap:12px; align-items:flex-start; color: var(--muted); font-size: 16px}
    .check{
      width:20px; height:20px; flex:0 0 auto; margin-top: 3px;
      border-radius: 7px;
      border:1px solid color-mix(in srgb, var(--accent) 38%, var(--line));
      background: color-mix(in srgb, var(--accent) 12%, transparent);
      display:grid; place-items:center;
    }
    .check svg{width:13px;height:13px}

    /* FAQ */
    details{
      border:1px solid var(--line);
      background: var(--card);
      border-radius: 20px;
      padding: 16px 18px;
    }
    details + details{margin-top: 12px}
    summary{
      cursor:pointer;
      font-weight: 800;
      font-size: 16px;
      list-style:none;
      display:flex; justify-content:space-between; align-items:center;
      gap: 10px;
    }
    summary::-webkit-details-marker{display:none}
    .caret{width:18px;height:18px; opacity:.8; transition: transform .18s ease}
    details[open] .caret{transform: rotate(180deg)}
    details p{margin: 12px 0 0; color: var(--muted); font-size: 16px; max-width: 82ch}

    /* FOOTER */
    footer{
      border-top:1px solid var(--line);
      padding: 46px 0 52px;
      color: var(--muted2);
      font-size: 14px;
    }
    .foot{display:flex; justify-content:space-between; align-items:flex-start; gap: 16px; flex-wrap:wrap}
    .foot a{color: var(--muted); text-decoration:underline; text-underline-offset:3px}
    .foot b{color: var(--text)}
    .tiny{max-width: 74ch}

    /* TOAST */
    .toast{
      position: fixed;
      left: 50%;
      bottom: 16px;
      transform: translateX(-50%);
      background: color-mix(in srgb, var(--bg) 85%, transparent);
      border: 1px solid var(--line);
      padding: 12px 14px;
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0,0,0,.18);
      display:none;
      gap: 10px;
      align-items:flex-start;
      max-width: min(760px, calc(100% - 24px));
      color: var(--muted);
      z-index: 200;
      backdrop-filter: blur(10px);
    }
    .toast.show{display:flex}
    .toast b{color: var(--text)}
    .toast .x{
      margin-left:auto;
      background: transparent;
      border: 1px solid var(--line);
      color: var(--muted);
      border-radius: 12px;
      padding: 6px 10px;
      cursor:pointer;
    }

    /* SIMPLE CONTENT PAGE */
    .content-card{
      margin: 26px auto 0;
      padding: 34px;
      border-radius: var(--radius2);
      background: var(--card);
      border: 1px solid var(--line);
      box-shadow: var(--shadow);
    }
    .content-card h1{
      font-size: clamp(30px, 3.6vw, 44px);
      margin: 0 0 12px;
      letter-spacing: -0.5px;
    }
    .content-card p{color: var(--muted); font-size: 16.5px; max-width: 82ch}
    .content-card .back{margin-top: 18px}

    /* MOBILE */
    @media (max-width: 980px){
      .hero-grid{grid-template-columns: 1fr}
      nav ul{display:none}
      .menu-btn{display:inline-flex}
      .cards{grid-template-columns: 1fr}
      .steps{grid-template-columns: 1fr}
      .proof{grid-template-columns: 1fr}
      .grid{grid-template-columns: 1fr}
      .brand{min-width:auto}
      .nav-actions{min-width:auto}
      .hero-left{padding: 34px}
      section{padding: 52px 0}
    }
    @media (prefers-reduced-motion: reduce){
      html{scroll-behavior:auto}
      .btn, nav a, .tab, .caret{transition:none}
    }
  </style>

