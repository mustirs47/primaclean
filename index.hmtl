  <div class="toast" id="toast" role="status" aria-live="polite">
    <div>
      <b id="toastTitle">Hinweis</b><br/>
      <span id="toastMsg">…</span>
    </div>
    <button class="x" id="toastClose" type="button">OK</button>
  </div>

  <script>
    // =========================
    // Helpers
    // =========================
    const $ = (sel, root=document) => root.querySelector(sel);
    const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));

    const toast = (title, msg) => {
      const el = $("#toast");
      $("#toastTitle").textContent = title;
      $("#toastMsg").textContent = msg;
      el.classList.add("show");
      clearTimeout(window.__toastT);
      window.__toastT = setTimeout(() => el.classList.remove("show"), 4600);
    };
    $("#toastClose").addEventListener("click", () => $("#toast").classList.remove("show"));

    // =========================
    // Apply Contact Config
    // =========================
    const cfg = window.PRIMACLEAN || {};
    const phoneTel = cfg.phoneTel || "+493910000000";
    const phoneDisplay = cfg.phoneDisplay || "+49 391 000 000 0";
    const email = cfg.email || "info@primaclean-magdeburg.de";
    const wa = cfg.whatsappNumber || "493910000000";

    function setHref(id, href, text){
      const el = $(id);
      if(!el) return;
      el.setAttribute("href", href);
      if(text) el.textContent = text;
    }

    // top buttons
    setHref("#ctaCallTop", `tel:${phoneTel}`, null);
    setHref("#ctaCallBottom", `tel:${phoneTel}`, `Anrufen (${phoneDisplay})`);
    setHref("#ctaMail", `mailto:${email}?subject=${encodeURIComponent("Reinigungsanfrage – PrimaClean")}`, `${email}`);

    const waBase = `https://wa.me/${wa}`;
    const waText = (t) => `${waBase}?text=${encodeURIComponent(t)}`;
    setHref("#ctaWhatsApp", waText("Hallo PrimaClean, ich möchte eine Reinigungsanfrage stellen."), null);
    setHref("#ctaWhatsAppBottom", waText("Hallo PrimaClean, ich möchte eine Reinigungsanfrage stellen."), "WhatsApp");

    // Impressum placeholders
    if($("#impPhone")) $("#impPhone").textContent = phoneDisplay;
    if($("#impMail")) $("#impMail").textContent = email;

    // =========================
    // Mobile Menu
    // =========================
    const menuBtn = $("#menuBtn");
    const mobileNav = $("#mobileNav");
    if (menuBtn) {
      menuBtn.addEventListener("click", () => {
        const isOpen = mobileNav.style.display === "block";
        mobileNav.style.display = isOpen ? "none" : "block";
        menuBtn.setAttribute("aria-expanded", String(!isOpen));
      });
      $$("#mobileNav a").forEach(a => a.addEventListener("click", () => {
        mobileNav.style.display = "none";
        menuBtn.setAttribute("aria-expanded", "false");
      }));
    }

    // =========================
    // Tabs (service selection)
    // =========================
    const tabs = $$(".tab");
    const serviceInput = $("#service");
    tabs.forEach(tab => {
      tab.addEventListener("click", () => {
        tabs.forEach(t => t.setAttribute("aria-selected", "false"));
        tab.setAttribute("aria-selected", "true");
        const val = tab.dataset.service || "Unterhaltsreinigung";
        if(serviceInput) serviceInput.value = val;
        toast("Ausgewählt", val);
      });
    });

    // =========================
    // Hash Router for "Unterseiten"
    // =========================
    function showPage(name){
      const pages = $$(".page");
      pages.forEach(p => p.classList.remove("active"));

      const target = $(`#page-${name}`) || $("#page-home");
      target.classList.add("active");

      // on page change: close menu
      if(mobileNav) mobileNav.style.display = "none";
      if(menuBtn) menuBtn.setAttribute("aria-expanded","false");

      // scroll to top for content pages
      window.scrollTo({top:0, behavior:"smooth"});
    }

    function route(){
      const hash = (location.hash || "#home").replace("#","");
      if(hash === "" || hash === "home"){
        showPage("home");
        return;
      }

      // content pages
      if(hash === "impressum" || hash === "datenschutz"){
        showPage(hash);
        return;
      }

      // if user clicks section anchor while not on home -> go home first
      const section = document.getElementById(hash);
      if(section){
        showPage("home");
        // wait one frame so the section exists & is visible
        requestAnimationFrame(() => {
          const s2 = document.getElementById(hash);
          if(s2) s2.scrollIntoView({behavior:"smooth", block:"start"});
        });
        return;
      }

      // fallback
      showPage("home");
    }

    window.addEventListener("hashchange", route);

    // intercept clicks: data-nav vs data-scroll
    $$(["a[data-nav]", "a[data-scroll]"].join(",")).forEach(a => {
      a.addEventListener("click", (e) => {
        const href = a.getAttribute("href") || "";
        if(!href.startsWith("#")) return;
        // default hash behavior is fine; we just ensure routing does the right thing
        // (do not preventDefault)
      });
    });

    // initial
    route();

    // =========================
    // Form submission (mailto)
    // =========================
    const form = $("#leadForm");
    if(form){
      form.addEventListener("submit", (e) => {
        e.preventDefault();

        const requiredIds = ["ziel", "rhythmus", "start", "name", "phone"];
        for (const id of requiredIds) {
          const el = $("#" + id);
          if (!el || !String(el.value || "").trim()) {
            el && el.focus();
            toast("Kurze Ergänzung", "Bitte ausfüllen: " + (el?.previousElementSibling?.textContent || id));
            return;
          }
        }

        const data = {
          service: $("#service")?.value || "Unterhaltsreinigung",
          ziel: $("#ziel")?.value || "",
          rhythmus: $("#rhythmus")?.value || "",
          start: $("#start")?.value || "",
          flaeche: $("#flaeche")?.value || "(optional)",
          note: $("#note")?.value || "(keine Hinweise)",
          name: $("#name")?.value || "",
          phone: $("#phone")?.value || "",
          email: $("#email")?.value || "(optional)"
        };

        const subject = encodeURIComponent(`Reinigungsanfrage – ${data.service} (${data.ziel})`);
        const body = encodeURIComponent(
`Hallo PrimaClean,

ich möchte eine Reinigungsanfrage stellen.

Bedarf: ${data.service}
Einsatzbereich: ${data.ziel}
Rhythmus: ${data.rhythmus}
Startfenster: ${data.start}
Fläche (optional): ${data.flaeche}

Hinweise:
${data.note}

Kontaktdaten:
Name: ${data.name}
Telefon: ${data.phone}
E-Mail: ${data.email}

Viele Grüße
${data.name}`
        );

        // Mailto open
        window.location.href = `mailto:${email}?subject=${subject}&body=${body}`;

        toast("Fast fertig", "E‑Mail wurde vorbereitet. Bitte senden – dann melden wir uns.");
        form.reset();
        if($("#service")) $("#service").value = "Unterhaltsreinigung";
        tabs.forEach((t,i)=>t.setAttribute("aria-selected", i===0 ? "true" : "false"));
      });
    }
  </script>
</body>
</html>
